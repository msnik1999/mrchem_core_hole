# vim:syntax=sh:

world_prec = 1.0e-3                 # Overall relative precision

MPI {
  numerically_exact = true          # Guarantee identical results in MPI
}

Molecule {
$coords
O       0.0000  0.0000  -0.1250
H      -1.4375  0.0000   1.0250
H       1.4375  0.0000   1.0250
$end
}

WaveFunction {
  method = DFT                      # Wave function method (HF or DFT)
}

OrbitalOccupancies {
  occupancies = "0 1 0"
}

DFT {
$functionals
PBE
$end
}

SCF {
  run = true
  max_iter = 1
  localize = false                   # Use canonical of localized orbitals
  guess_type = mw              # Type of initial guess: none, mw, gto
  deltascf_method = IMOM
}